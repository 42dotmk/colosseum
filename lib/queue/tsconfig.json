{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module":"CommonJS",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/",
  ]
}